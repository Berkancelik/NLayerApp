@model ProductDto
@{
    ViewData["Title"] = "Save";
}

<form asp-action="Save" method="post" asp-controller="Products">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="text-danger" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Stock"></label>
        <input asp-for="Stock" class="text-danger" />
        <span asp-validation-for="Stock" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <input asp-for="Price" class="text-danger" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>  

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" class="text-danger" ></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn-primary"/>
    </div>
</form>